# ----------------------------------------------------------
# Arguments Test
#
# Triggering Events : Belief,Goal
# Body              : Belief,Goal,Action
# Arguments         : Number,String,Name,List,Tuple,Variable
# Condition         : None
# Lambda            : None
#
# ----------------------------------------------------------

# ----------------------
# Arguments are Numbers
# ----------------------

(+belief(3)) >> []

(-belief(-5)) >> []

(+~goal(2.0)) >> []

(-~goal(-4.0)) >> []

(+belief(3e4,1e+2)) >> []

(-belief(3E5,7E+4)) >> []

(+~goal(-3e-5)) >> []

(-~goal(-7E-3)) >> []

(+belief(2.3e5,4.7e+2)) >> []

(-belief(4.5E2,9.2E+3)) >> []

(+~goal(-1.2e-4)) >> []

(-~goal(-3.4E-1)) >> []


# ----------------------
# Arguments are Strings
# ----------------------

(+belief("a")) >> []

(-belief("a","b")) >> []

(+~goal("a","b","c")) >> []

(-~goal("a","b","c","d")) >> []


# ----------------------
# Arguments are Names
# ----------------------

(+belief(a)) >> []

(-belief(a,b)) >> []

(+~goal(a,b,c)) >> []

(-~goal(a,b,c,d)) >> []


# ----------------------
# Arguments are Lists
# ----------------------

( +belief( [-2.0e-3, "a string", name ] ) ) >> []

( -belief( [-2.0e-3, name, ["nested 1", "nested 2"], 3.5  ] ) ) >> []

( +~goal( [ [1,2.0], ["a", "b"], [x, y]  ] ) ) >> []

( -~goal( [ [1,2.0], ["a", ["double nesting"], "b"], [x, y]  ] ) ) >> []


# ----------------------
# Arguments are Tuples
# ----------------------

( +belief( (-2.0e-3, "a string", name ) ) ) >> []

( -belief( (-2.0e-3, name, ("nested 1", "nested 2"), 3.5  ) ) ) >> []

( +~goal( ( (1,2.0), ("a", "b"), (x, y)  ) ) ) >> []

( -~goal( ( (1,2.0), ("a", ("double nesting"), "b"), (x, y)  ) ) ) >> []


# ------------------------
# Arguments are Variables
# ------------------------
# _("")

( +belief( _("X") )) >> []

( -belief( _("X"), _("Y") )) >> []

( +~goal( _("X"), _("Y"), _("W") )) >> []

( -~goal( _("X"), _("Y"), _("W"), _("Z") )) >> []




# ------------------------------
#
# Arguments are miscellaneous!
#
# ------------------------------

( +belief(-123, "string", param, _("X")) ) >> 
    [
        +~first_goal("string 1", arg1, _("X"), 1.0), 
        second_action(arg2, _("X"), 2E-2, "string 2"), 
        -third_belief(_("X"), 3e3, "string 3", arg3) 
    ]

( -~goal(_("X"), "str", arg, 1E-2) ) >> 
    [
        first_action([1,2,3], ["string"], [a,b,c]), 
        -second_belief( (1,2), ("a", "b"), (a)  ), 
        -~third_goal( ["start", [1, (a,b,c), 3], (0, (2.0,3.0), 5), "end"])      
    ]


